<style>

  .myown{
    color : #ffffff;
  }
</style>


<% if (typeof(errors) != 'undefined') {

    errors.forEach(err => {%>

        <div class="myown">
            <%- err %>
            <button type="button" >
                <span aria-hidden="true">&times;</span>
            </button>
        </div>

    <% });

} %>

<% if (success_msg != '') {%>

    <div class="myown" role="alert">
        <%- success_msg %>
        <button type="button">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

<% } %>




<% if (error_msg != '') {%>

    <div class="myown" role="alert">
        <%- error_msg %>
        <button type="button">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

<% } %>




<% if (error != '') {%>

<div class="myown" role="alert">
    <%- error %>
    <button type="button"  >
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<% } %>
